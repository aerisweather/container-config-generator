{
	"applicationName": "guestbook",
	"instanceName": "first",
	"containers": {
		"redis-master": {
			"name": "master",
			"image": "redis",
			"ports": {
				"redis": {
					"port": 6379
				}
			}
		},
		"redis-slave": {
			"name": "worker",
			"image": "gcr.io/google_samples/gb-redisslave:v1",
			"ports": {
				"redis": {
					"port": 6379
				}
			},
			"env": {
				"GET_HOSTS_FROM": "dns"
			},
			"replicas": 2
		},
		"frontend": {
			"name": "php-redis",
			"image": "gcr.io/google_samples/gb-frontend:v3",
			"ports": {
				"http": {
					"port": 80
				}
			},
			"env": {
				"GET_HOSTS_FROM": "dns"
			},
			"replicas": 3
		}
	}
}