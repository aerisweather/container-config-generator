{
	"apiVersion": "v1",
	"kind": "ReplicationController",
	"metadata": {
		"labels": {
			"name": "redis-slave"
		},
		"name": "redis-slave"
	},
	"spec": {
		"replicas": 2,
		"selector": {
			"name": "redis-slave"
		},
		"template": {
			"metadata": {
				"labels": {
					"name": "redis-slave"
				}
			},
			"spec": {
				"containers": [
					{
						"env": [
							{
								"name": "GET_HOSTS_FROM",
								"value": "dns"
							}
						],
						"image": "gcr.io/google_samples/gb-redisslave:v1",
						"name": "worker",
						"ports": [
							{
								"name":"redis",
								"containerPort": 6379
							}
						]
					}
				]
			}
		}
	}
}